          <a class="link-btn">
            <%= link_to "ログイン", new_user_session_path, class:"login" %>
            <%= link_to "新規登録", new_user_registration_path, class:"signup" %><br>
            <br><%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post, class:"guest" %>
