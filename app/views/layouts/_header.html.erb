<header>
  <div class="header-container">
    <div class="header-right">
      <% if user_signed_in? %>
        <%= link_to "TOPへ", root_path, class:"header-top" %>
        <%= link_to "マイページ", mypage_path(current_user), class:"header-mypage" %>
      <% else %>
        <%= link_to "TOPへ", root_path, class:"top" %>
        <%= link_to "新規登録", new_user_registration_path, class:"header-signup" %>
        <%= link_to "ログイン", new_user_session_path, class:"header-login" %>
      <% end %>
    </div>
  </div>
</header>