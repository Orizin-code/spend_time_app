<h1 class="content-title">--お問い合わせフォーム--<%= " 《最終確認》" if @contact.submitted == "1" %></h1>
<div class="input-wrapper">
  <%= form_with model: @contact, local: true do |form| %>
    <%= render "error_messages", form: form %>
    <%= form.hidden_field :submitted %>
    <% if @contact.submitted == "1" %>
      <%# 確認画面 %>
      <%= render "confirm_fields", form: form %>
      <%= form.button "戻る", name: "contact[confirmed]", value: "", class:"contact-back-btn" %>
      <%= form.button "送信", name: "contact[confirmed]", value: "1", class:"submit-btn" %>
    <% else %>
      <%# 投稿画面 %>
      <%= render "submit_fields", form: form %>
      <%= form.submit "確認", class:"submit-btn" %>
    <% end %>
  <% end %>
</div>