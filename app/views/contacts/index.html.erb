<div class="top-container d-flex align-items-center justify-content-center bg-success">
  <h2 class="content-title text-white font-weight-bolder">〜お問い合わせフォーム〜<br><%= " 《最終確認》" if @contact.submitted == "1" %></h2>
</div>

  <%= form_with model: @contact, local: true do |form| %>
    <%= render "error_messages", form: form %>
    <%= form.hidden_field :submitted %>
    <% if @contact.submitted == "1" %>
      <%# 確認画面 %>
      <%= render "confirm_fields", form: form %>
      <div class="confirm-btn d-flex justify-content-center">
        <%= form.button "送信", name: "contact[confirmed]", value: "1", class:"submit-btn" %>
        <div class="cancel-btn">
          <%= form.button "戻る", name: "contact[confirmed]", value: "", class:"page-post text-white btn btn-danger" %>
        </div>
      </div>
    <% else %>
      <%# 投稿画面 %>
      <%= render "submit_fields", form: form %>
      <div class="confirm-btn d-flex justify-content-center">
        <%= form.submit "次へ", class:"submit-btn" %>
        <div class="cancel-btn">
          <%= link_to "キャンセル", posts_path, type:"button", class:"page-post text-white btn btn-danger" %>
        </div>
      </div>
    <% end %>
  <% end %>
