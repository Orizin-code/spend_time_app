
<div class="d-flex justify-content-center">
  <%= form.text_field :name, placeholder: "氏名またはニックネーム", required: true, class:"input-area-field" %>
</div>

<div class="d-flex justify-content-center">
  <%= form.email_field :email, placeholder: "メールアドレス", required: true, pattern: "^[a-z0-9._%+-]+@[a-z0-9.-]+\\.[a-z]+$", class:"input-area-field" %>
</div>
<h5 class="contact-title d-flex justify-content-center">お問い合わせ内容</h5>
<div class="d-flex justify-content-center">
  <%= form.text_area :content, required: true, size: "10x5", class:"input-area-field" %>
</div>